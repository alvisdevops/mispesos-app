# PostgreSQL Database Configuration
POSTGRES_DB=${POSTGRES_DB}
POSTGRES_USER=${POSTGRES_USER}
POSTGRES_PASSWORD=${POSTGRES_PASSWORD}
POSTGRES_PORT=${POSTGRES_PORT}

# Database Connection URL (for applications)
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@postgres:5432/${POSTGRES_DB}

# FastAPI Backend Configuration
FASTAPI_PORT=${FASTAPI_PORT}
TELEGRAM_BOT_TOKEN=${TELEGRAM_BOT_TOKEN}

# Frontend Configuration
FRONTEND_PORT=80
# Usar ruta vacÃ­a para que el frontend use rutas relativas (/api)
# Nginx hace proxy de /api -> http://fastapi:8000/api internamente
VITE_API_URL=
VITE_TELEGRAM_BOT_NAME=${TELEGRAM_BOT_NAME}
VITE_ADMIN_USER_ID=${ADMIN_USER_ID}

# Data Path (bind mounts en servidor)
DATA_PATH=/var/lib/mispesos
